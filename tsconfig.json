{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [ "node_modules", "**/*.spec.ts" ]
}
